set number
set relativenumber

filetype plugin indent on

set clipboard=unnamedplus

set expandtab
set shiftwidth=4
set softtabstop=4
set tabstop=4
set smartindent
set colorcolumn=80,120
let g:indent_guides_enable_on_vim_startup = 1

set hlsearch
set incsearch

set backspace=indent,eol,start

syntax on
